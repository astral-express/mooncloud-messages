<!-- Home page -->
<main id="hero_bg_img" class="d-flex align-items-center">
  <div class="container">
    <div class="d-flex-column d-lg-flex align-items-center">
      <div
        class="d-flex-column hero-left p-2 pb-5 text-center text-lg-start p-lg-0 pb-lg-0"
      >
        <% if(typeof user != 'undefined') { %>
        <h1 class="display-3">
          <strong>Welcome back, <%= user.username %>!</strong>
        </h1>
        <hr class="border border-light border-1" />
        <h4 class="pb-4">
          Click to check your messages and profile down below!
        </h4>
        <div class="d-flex">
          <a
            id="mooncloud_user_page"
            href="/user/<%= user.username %>"
            class="btn btn-lg btn-secondary mx-auto mx-lg-0"
          >
            Go to Mooncloud Messages
          </a>
        </div>
        <% } else { %>
        <h1 class="display-4">
          <strong>Welcome to Mooncloud Messages!</strong>
        </h1>
        <hr class="border border-light border-1" />
        <h4 class="pb-4">
          To start using our services and message your friends for free, let's
          start with making you an account!
        </h4>
        <div class="d-flex">
          <button
            type="button"
            class="btn btn-lg btn-secondary mx-auto mx-lg-0"
            data-bs-target="#signup-modal"
            data-bs-toggle="modal"
          >
            Create your account
          </button>
        </div>
        <p class="pt-4 small">
          Already have an account?
          <br />
          <a type="button" data-bs-target="#login-modal" data-bs-toggle="modal">
            <u><strong>Login here</strong></u>
          </a>
        </p>
        <% } %>
      </div>
      <div class="hero-right d-flex flex-column align-items-center p-3 m-lg-5">
        <img
          src="../public/assets/imgs/hero-messaging.image.png"
          alt="hero-img"
          id="hero_img"
          class="img-fluid"
        />
        <p class="small pt-3">
          Background image designed by:
          <a href="http://www.freepik.com" target="”_blank”"
            >upklyak / Freepik</a
          >
        </p>
      </div>
    </div>
  </div>
  <%- include('./modals/signup.ejs') %> <%- include('./modals/login.ejs') %>
</main>
<script type="module" src="../public/utils/html/main.html.js"></script>