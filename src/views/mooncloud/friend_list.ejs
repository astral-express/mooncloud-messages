<% if(friends === undefined) { %>
    <p>Your friendlist is currently empty, to add a friend, click on the plus button below!</p>
<% } else { %>
    <% for(let i = 0; i < friends.length; i++) { %>
    <div id="friend_list_row" class="p-3">
    <div class="d-flex justify-content-between align-items-center">
        <div class="user-avatar">
        <span class="status me-1">
            <% if(friends[i].status === "online") { %>
            <svg width="9px" height="9px" viewBox="0 0 36 36" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="iconify iconify--twemoji" preserveAspectRatio="xMidYMid meet" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><circle fill="#25e000" cx="18" cy="18" r="18"></circle></g></svg>
            <% } else if(friends[i].status === "away") { %>
            <svg width="9px" height="9px" viewBox="0 0 36 36" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="iconify iconify--twemoji" preserveAspectRatio="xMidYMid meet" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><circle fill="#ffd333" cx="18" cy="18" r="18"></circle></g></svg>
            <% } else if(friends[i].status === "do_not_disturb") { %>
            <svg width="9px" height="9px" viewBox="0 0 36 36" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="iconify iconify--twemoji" preserveAspectRatio="xMidYMid meet" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><circle fill="#DD2E44" cx="18" cy="18" r="18"></circle></g></svg>
            <% } else { %>
            <svg width="9px" height="9px" viewBox="0 0 36 36" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="iconify iconify--twemoji" preserveAspectRatio="xMidYMid meet" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"><circle fill="#7d7d7d" cx="18" cy="18" r="18"></circle></g></svg>
            <% } %>
        </span>
        <% if(friends[i].avatar != "") { %>
        <img id="friend_list_row_avatar" class="me-1" src="assets/users/uploads/<%= friends[i].avatar %>" alt="user-row-avatar" />
        <% } else { %>
        <img id="friend_list_row_avatar" class="me-1" src="assets/users/default/default_user_avatar.jpg" alt="user-row-avatar" />
        <% } %>
        </div>
        <div class="user-username px-2 me-2 py-2 py-md-0">
            <p id="friend_list_row_username" class="m-0 fs-5"><%= friends[i].username %></p>
        </div>
        <button
            type="button"
            class="btn btn-secondary ms-md-2 ms-auto"
            id="v-pills-profile-tab"
            data-bs-toggle="pill"
            data-bs-target="#v-pills-profile-<%= friends[i].username %>"
            role="tab"
            aria-controls="v-pills-profile"
            aria-selected="false"
        >
        Profile
        <i class="fa-solid fa-chevron-right"></i>
        </button>
    </div>
    </div>
    <% } %>
<% } %>