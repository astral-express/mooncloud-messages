<div id="user_row" class="bg-dark">
  <div class="p-3">
    <div class="user-info d-flex align-items-center">
      <div class="user-avatar">
        <span class="status me-1">
          <img
            id="user_status"
            src="../../public/assets/vectors/status-online.vector.png"
          />
        </span>
        <img id="user_row_avatar"
        src="assets/users/uploads/<% if(user.avatar != "" || null || undefined){ %><%= user.avatar
        %> <% } else { %><%= user.defaultAvatar %><% } %>"
        alt="user-row-avatar" />
      </div>
      <div class="username px-2 py-2 py-md-0">
        <p id="user_row_username" class="m-0">Placeholder</p>
      </div>
      <button
        type="button"
        class="btn btn-secondary ms-md-2"
        id="v-pills-profile-tab"
        data-bs-toggle="pill"
        data-bs-target="#v-pills-profile"
        role="tab"
        aria-controls="v-pills-profile"
        aria-selected="false"
        >
        Profile
        <i class="fa-solid fa-chevron-right"></i>
      </button>
    </div>
  </div>
</div>
