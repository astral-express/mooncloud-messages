<!-- Login modal  -->
<form action="/login" method="post" class="needs-validation" novalidate>
  <div
    class="modal fade"
    id="login-modal"
    aria-hidden="true"
    aria-labelledby="login-modal"
    tabindex="-1"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content border border-light border-2">
        <div class="modal-header p-2 px-3 bg-light">
          <div class="logo">
            <img
              src="assets/logo/mooncloud_logo.png"
              alt="Logo"
              width="34"
              height="34"
              class="d-inline-block"
            />
            <!-- <strong class="text-dark">Mooncloud Messages</strong> -->
          </div>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body text-center mx-5">
          <div class="login-title pt-2">
            <h3>Login</h3>
            <hr class="border border-light border-1" />
          </div>
          <div class="pb-3">
            <p class="m-0 text-warning">
              <% if(user_error_input.length > 0) { %> 
                <% for( var i=0; i<user_error_input.length; i++) { %>
                    <%= user_error_input[i] %>
                <% } %>
              <% } %>
            </p>
            <p class="m-0 text-success">
              <% if(acc_created.length > 0) { %>
                    <%= acc_created %>
              <% } %>
            </p>
          </div>
          <div class="input-group">
            <span class="input-group-text"
              ><i class="fa-solid fa-user"></i>
            </span>
            <div class="form-floating">
              <input
                type="text"
                class="form-control"
                id="email_or_username"
                name="email_or_username"
                placeholder="Email or Username"
                required
              />
              <label for="email_or_username">Username or Email</label>
              <span class="invalid-tooltip">
                Please enter your email or username to login
              </span>
            </div>
          </div>
          <div class="pb-2">
            <p class="m-0 mt-2 text-warning">
              <% if(warning_email.length > 0) { %> <%= warning_email %> <% } %>
            </p>
          </div>
          <div class="input-group pt-1">
            <span class="input-group-text"
              ><i class="fa-solid fa-key"></i
            ></span>
            <div class="form-floating">
              <input
                type="password"
                class="form-control"
                placeholder="Password"
                id="login_password"
                name="login_password"
                required
              />
              <label for="password">Password</label>
              <span class="invalid-tooltip">
                Please enter your password to login
              </span>
            </div>
          </div>
          <div class="pb-2">
            <p class="m-0 mt-2 text-warning">
              <% if(warning_password.length > 0) { %> <%= warning_password %> <%
              } %>
            </p>
          </div>
          <div class="d-flex flex-column">
            <button
              id="login-button"
              type="submit"
              class="btn btn-lg btn-secondary"
            >
              Login
            </button>
          </div>
        </div>
        <hr class="border border-light border-1 m-0 mt-2" />
        <div class="modal-footer justify-content-center text-center">
          <p class="p-0 small text-light">
            Don't have an account?
            <br />
            <a
              type="button"
              data-bs-target="#signup-modal"
              data-bs-toggle="modal"
            >
              <strong><u>Sign up here</u></strong>
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</form>
