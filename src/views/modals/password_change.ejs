<div class="modal fade" id="password_change_modal" aria-hidden="true" aria-labelledby="password_change_modal"
    tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border border-light border-2">
            <div class="modal-header p-2 px-3 bg-light">
                <div class="logo">
                    <img src="assets/logo/mooncloud_logo_128x128.png" alt="Logo" width="34" height="34"
                        class="d-inline-block" />
                </div>
                <button close-password-change-modal type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="password_change_title pb-2 pt-1">
                    <h4>Password change</h4>
                </div>
                <span id="settings_password_change_success" class="text-center bg-secondary mb-3 p-2 rounded mx-5" style="display: none;"></span>
                <div id="password_change_fields" class="password-input-form">
                    <div class="input-group mb-1">
                        <span class="input-group-text"><i class="fa-solid fa-rotate-right"></i></span>
                        <div class="form-floating">
                            <input type="password" class="form-control" placeholder="Old password" id="old_password"
                                name="old_password" required />
                            <label for="old_password">Old password</label>
                        </div>
                        <span class="input-group-text">
                            <i id="settings_change_old_password_toggler" class="fa-solid fa-eye"></i>
                        </span>
                    </div>
                    <div class="pb-2">
                        <p id="old_password_invalid_feedback" class="m-0 small text-warning"></p>
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text"><i class="fa-solid fa-key"></i></span>
                        <div class="form-floating">
                            <input type="password" class="form-control" placeholder="New password" id="new_password"
                                name="password" required />
                            <label for="new_password">New password</label>
                        </div>
                        <span class="input-group-text">
                            <i id="settings_change_password_toggler" class="fa-solid fa-eye"></i>
                        </span>
                        <span class="input-group-text" id="change_password_popover" data-bs-container="body"
                            data-bs-toggle="popover" data-bs-placement="right"
                            data-bs-content="Password must be at least 6 characters long, including one uppercase letter, number and a sign.">
                            <i class="fa-regular fa-circle-question"></i>
                        </span>
                    </div>
                    <div class="pb-2">
                        <p id="new_password_invalid_feedback" class="m-0 small text-warning"></p>
                    </div>
                    <div class="input-group mb-1">
                        <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                        <div class="form-floating">
                            <input type="password" class="form-control" placeholder="Confirm new password"
                                id="confirm_new_password" name="confirm_new_password" />
                            <label for="confirm_new_password">Confirm new password</label>
                        </div>
                    </div>
                    <div class="pb-1">
                        <p id="confirm_new_password_invalid_feedback" class="m-0 small text-warning"></p>
                    </div>
                    <div id="settings_password_change_buttons"
                        class="d-flex align-items-center justify-content-between pt-1 px-3">
                        <button close-password-change-modal type="button" class="btn btn-danger" data-bs-dismiss="modal" aria-label="Close"><i
                                class="fa-solid fa-xmark me-1"></i>Cancel</button>
                        <button id="update_password_btn" type="button" class="btn btn-light"><i
                                class="fa-solid fa-check me-1"></i>Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>